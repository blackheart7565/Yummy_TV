<UserControl x:Class="Yummy_TV.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Yummy_TV"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Border BorderBrush="{StaticResource GradientBrush1}"
            BorderThickness="5"
            Background="{StaticResource GradientBrush7}"
            Opacity="0.5">

        <TextBlock Text="H O M E"
                   Foreground="{StaticResource GradientBrush4}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="100"
                   FontWeight="Bold" />

    </Border>

</UserControl>
